<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UberAppDriver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/blue_one</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary Brand Color -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/blue_one</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status Bar Color -->
        <item name="android:statusBarColor" tools:targetApi="1">?attr/colorPrimaryVariant</item>
        <!-- Otros -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

    </style>

    <style name="Theme.UberAppDriver" parent="Base.Theme.UberAppDriver" />
</resources>